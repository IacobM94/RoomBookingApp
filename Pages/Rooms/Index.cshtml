@page
@model RoomBookingApp.Pages.Rooms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 id="portalTitle">Rooms</h1>
<p id="portalTitleCopy">Below you may find a list of the Rooms registered in the system. You can create a new room if you are not able to find the one you are looking for.</p>

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Floor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Room) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-page="./Edit" asp-route-id="@item.RoomNumber">Edit</a> |
                <a class="btn btn-outline-warning" asp-page="./Details" asp-route-id="@item.RoomNumber">Details</a> |
                <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.RoomNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
